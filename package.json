{
  "name": "cba-components",
  "version": "1.1.0",
  "description": "This is a repository where the components for the Chromium Browser Automation project might live.",
  "main": "index.js",
  "bin": {
    "cba-components": "./bin/cba-components.js"
  },
  "scripts": {
    "test": "npm run build:puppeteer && npm run test:run",
    "test:run": "concurrently -r -k -s=first \"http-server dist -s -p 3001\" \"mocha tests/puppeteer/mocha.js\"",
    "test:eslint": "eslint \"src/**/*.js\" \"tests/**/*.js\"",
    "test:stylelint": "stylelint \"src/**/*.css\" \"tests/**/*.css\"",
    "start": "concurrently -r -k \"npm run build:smoke:watch\" \"http-server dist -p 3000\"",
    "build": "npm run clean && webpack --config webpack.config.js",
    "build:puppeteer": "npm run clean && webpack --config webpack.config.js --puppeteer",
    "build:smoke": "npm run clean && webpack --config webpack.config.js --smoke",
    "build:smoke:watch": "npm run clean && webpack --config webpack.config.js --smoke --watch",
    "clean": "rm -r dist || true",
    "server": " http-server dist -p 3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Manvel/cba-components.git"
  },
  "author": "Manvel Saroyan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Manvel/cba-components/issues"
  },
  "homepage": "https://github.com/Manvel/cba-components#readme",
  "dependencies": {
    "http-server": "^0.12.1",
    "lit-html": "^1.1.2",
    "raw-loader": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^6.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^7.26.0",
    "mocha": "^7.0.1",
    "puppeteer": "^8.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
